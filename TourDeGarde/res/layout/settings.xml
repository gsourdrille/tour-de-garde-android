<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Settings" >

    <LinearLayout
        android:id="@+id/dateDebutBouton"
        android:clickable="true"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_weight="0.00" 
        android:gravity="center_vertical"
        android:background="@drawable/layout_selector">

        <TextView
            android:id="@+id/dateDebutText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/dateDebutText"
            android:layout_marginLeft="10dp"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/dateDebutValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="10dp"
            android:textColor="#000000" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/dateFinBouton"
        android:clickable="true"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.00" 
        android:gravity="center_vertical"
        android:background="@drawable/layout_selector">

        <TextView
            android:id="@+id/dateFinText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/dateFinText"
            android:layout_marginLeft="10dp"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/dateFinValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
             android:text=""
            android:layout_marginLeft="10dp"
            android:textColor="#000000" />
       
    </LinearLayout>
    <LinearLayout
        android:id="@+id/periodeBouton"
        android:clickable="true"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.00" 
        android:gravity="center_vertical"
        android:background="@drawable/layout_selector">

        <TextView
            android:id="@+id/periodeText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/periodeText"
            android:layout_marginLeft="10dp"
            android:textColor="#000000" />
 	<TextView
            android:id="@+id/periodeValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="10dp"
            android:textColor="#000000" />
       
    </LinearLayout>
    <LinearLayout
        android:id="@+id/estPeriodeBouton"
        android:clickable="true"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.00" 
        android:gravity="center_vertical"
        android:background="@drawable/layout_selector">

        <TextView
            android:id="@+id/estPeriodeText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/estPeriodeText"
             android:layout_marginLeft="10dp"
            android:textColor="#000000" />
         <TextView
            android:id="@+id/estPeriodeValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text=""
             android:layout_marginLeft="10dp"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>